# {{{1 Windows

super + q
    bspc node --close

super + alt + {_,control +}Tab
    bspc node --focus @{parent,brother}

super + {Tab,shift + Tab}
    bspc node --focus {next,prev}.active

super + b
    bspc node -s biggest

super + backslash
    bspc node -f last

super + alt + {z,f,d}
    bspc node --state {floating,fullscreen,tiled}

super + alt + {_, shift +} s
    FLAG_TOGGLE={on,off}; \
    bspc node --flag sticky=$FLAG_TOGGLE; \
    notify-send "$(~/bin/bspc-getfocusedclassname)" "sticky $FLAG_TOGGLE"

super + alt + {_, shift +}a
    FLAG_TOGGLE={on,off}; \
    bspc node --flag locked=$FLAG_TOGGLE --flag private=$FLAG_TOGGLE && \
    notify-send "$(~/bin/bspc-getfocusedclassname)" "locked & private $FLAG_TOGGLE"

#swap with shift
super + shift + {h,j,k,l}
    DIR={left,down,up,right}; \
    bspc node --swap "$DIR" || bspc node --swap {prev,next,prev,next}

# split
super + control + {h,j,k,l}
    bspc node --presel-dir \~{west,south,north,east}

# ratios
super + control + {b,e}
    bspc desktop --{balance,equalize}

super + control + 0
    bspc node --presel-dir cancel

super + control + {1-9}
    bspc node --presel-ratio 0.{1-9}


# resizing
super + alt + control + {h,j,k,l}
    bspc node {@west -r -20,@south -r +20,@north -r -20,@east -r +20}

super+ alt + control + shift + {h,j,k,l}
    bspc node {@west -r +20,@south -r -20,@north -r +20,@east -r -20}

# {{{1 Launch

super + Return
    urxvt

super + alt + Return
    urxvt -name fancymux

super + alt + control + Return
    urxvt -name fancyonemux -e onemux

super + control + Return
    urxvt -name onemux -e onemux

super + o
    wmctrl -xa "Icedove" || exec icedove

super + p
    wmctrl -xa "Pidigin" || exec pidgin

super + i
    wmctrl -xa "ircmux" || exec urxvtcd -name 'ircmux' -e moshj irc

super + r
    rofi -show run

super + space
    rofi -show combi -combi-modi ssh,run,window

super + control + Tab
    rofi -show window -lines 10 -columns 8

XF86Tools
    wmctrl -xa "Firefox" || exec firefox-esr
# firefox-esr for debian unstable
# wmctrl -xa "Iceweasel" || exec iceweasel

XF86Search
    wmctrl -xa "Chromium" || exec chromium


# {{{1 Fn Keys

XF86AudioMute
    ~/bin/thinkvolume mute

super + XF86AudioMute
    wmctrl -xa "pavucontrol" || exec pavucontrol

XF86AudioRaiseVolume
    ~/bin/thinkvolume up

super + XF86AudioRaiseVolume
    wmctrl -xa "cantata" || exec cantata

XF86AudioLowerVolume
    ~/bin/thinkvolume down

XF86AudioMicMute
    ~/bin/thinkvolume mutemic

super + Home
    wmctrl -xa "wicd-client.py" || exec ~/bin/wifischeisse

# mpc
super + alt + control + Right
    mpc next

super + alt + control + Left
    mpc prev

super + alt + control + Up
    mpc toggle

super + alt + control + Up
    mpc pause

