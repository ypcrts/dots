# Super +  Alt     -> Desktop Binding
# Super +  Alt     -> Windows
# Super +  Control -> Special

# {{{1 control/power/reload
super + alt + control + XF86Explorer
    ~/.config/bspwm/bspwmrc && \
    pkill -USR1 -x sxhkd  && \
    notify-send --urgency=normal --expire-time=500 'bspwmrc and sxhkdrc reloaded'

super + alt + control + XF86LaunchA
    pkill -x panel;  \
    notify-send --urgency=normal --expire-time=500 'panel reloaded'; \
    ~/.config/lemonbar/panel

super + alt + control + shift + XF86LaunchA
    pkill -x panel;  \
    notify-send --urgency=normal --expire-time=500 'panel killed'

super + alt + control + Delete
    /usr/bin/xscreensaver-command --lock

# windows xp got me like
super + l
    /usr/bin/xscreensaver-command --lock

# macOS High Sierra got me like
ctrl + alt + super + q
    /usr/bin/xscreensaver-command --lock

#    notify-send --urgency=critical --expire-time=500 'Locking...'; \
#    ~/bin/thinklock --dpms

super + alt + control + Delete
    notify-send --urgency=critical --expire-time=500 'Locking...'; \
    /usr/bin/xscreensaver-command --lock

super + alt + control + BackSpace
    notify-send --urgency=critical --expire-time=500 'Sleeping...'; \
    /usr/bin/xscreensaver-command --lock; \
    systemctl suspend

super + alt + control + XF86AudioMute
    urxvt -e /bin/sh -c 'echo "Poweroff? [yN]"; read x; if [ "$x" = "y" ]; then echo "shutting down"; systemctl poweroff;  fi'

# {{{1 monitors
super + bracketright
    bspc monitor next -f
super + bracketleft
    bspc monitor prev -f
# }}}1

# {{{1 Desktop

super + grave
    notify-send "Desktop $(bspc query --desktops --desktop focused)"

#toggle between tiled and monocle
super + alt + {t,y}
    bspc desktop --layout {tiled,monocle}

super + alt + {r, shift + r}
    bspc node --rotate {90,270}

super + alt + {c, shift + c}
    bspc node --circulate {forward,backward}

super + alt + backslash
    bspc desktop --focus last

super + {j,k}
    bspc desktop --focus {next,prev}

super + alt + {j,k}
    DIR={next,prev}; \
    WIN=$(bspc query --nodes --node focused); \
    bspc node --to-desktop "$DIR" && \
    bspc desktop --focus "$DIR" && \
    bspc node $WIN --focus

super + {1-9}
    bspc desktop --focus ^{1-9}

super + alt + {1-9}
    bspc node --to-desktop ^{1-9}

super + control + shift + {1-9}
    DESKTOP={1-9}; \
    bspc desktop --swap ^$DESKTOP && \
    notify-send "Swapped with Desktop $DESKTOP"

super + {braceright,braceleft}
    GAP=$(( $(bspc config -d focused window_gap) {+,-} 2 )); \
    bspc config -d focused window_gap $(( GAP < 0? 0 : GAP ))

## bspwm 0.9.2 removed `bspc --remove-desktops`
