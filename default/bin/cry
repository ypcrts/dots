#!/bin/sh
export CRYFS_FRONTEND=noninteractive
export CRYFS_NO_UPDATE_CHECK=true
if [ "x$CRY_PREFIX" = 'x' ]; then
  >&2 echo 'set $PREFIX please'
  exit 88
fi
case $1 in 
  -)
    cmd=umount
    if command -V fusermount >/dev/null 2>&1; then
      cmd=fusermount
    fi

    for x in $CRY_PREFIX/*/mnt; do
      $cmd "$x"
    done

    ;;
  *)
    cryfs "$CRY_PREFIX/$1/src" "$CRY_PREFIX/$1/mnt"
esac
