{
  "suggest.autoTrigger": "trigger",
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "args": ["--log-file=/tmp/ccls-coc.log", "-v=1"],
      "filetypes": ["c", "cc", "cpp", "objc", "objcpp"],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls-coc"
        },
        "client": {
          "snippetSupport": true
        }
      }
    }
  }
}








