~/bin/: ./xorg/bin/*
~/.urxvt/ext/font-size: ./xorg/urxvt-font-size
~/.Xresources: ./xorg/Xresources
~/.config/color/w0ng: ./xorg/xresources_color_w0ng

#--------------------------------------------------------------------------------
